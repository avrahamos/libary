@model Libray.ViewModel.ShelfVM

@{
    ViewData["Title"] = "Edit Shelf";
}

<h1>Edit Shelf</h1>

<form asp-action="UpdateShelf" method="post">
    <!-- החבאת ה-Id -->
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="LibaryId" class="control-label">Library</label>
        <select asp-for="LibaryId" class="form-control" asp-items="ViewBag.Libraries">
            <option value="">Select a Library</option>
        </select>
        <span asp-validation-for="LibaryId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="High" class="control-label">Height</label>
        <input asp-for="High" class="form-control" />
        <span asp-validation-for="High" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Width" class="control-label">Width</label>
        <input asp-for="Width" class="form-control" />
        <span asp-validation-for="Width" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a href="@Url.Action("Index", "Shelf")" class="btn btn-secondary">Cancel</a>
    </div>
</form>
